#!/usr/bin/env bash
set -eo pipefail
plan=$2

if [[ ! -f func.yaml || ! -f go.mod ]] ; then
  exit 100
fi

cat >> $plan <<EOM
[[provides]]
  name = "func-framework"

[[requires]]
  name = "go"

  [requires.metadata]
    build = true
    launch = false

[[requires]]
  name = "func-framework"

[[requires]]
  name = "boson"
EOM
